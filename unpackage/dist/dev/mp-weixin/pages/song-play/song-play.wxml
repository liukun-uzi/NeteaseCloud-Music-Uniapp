<view class="back-content"><image class="blur" src="{{songInfo.al&&songInfo.al.picUrl}}" mode="widthFix"></image><view data-event-opts="{{[['tap',[['closeList',['$event']]]]]}}" class="container" bindtap="__e"><view class="topBar" style="{{'height:'+(h+44+'px')+';'+('line-height:'+(2*h+44+'px')+';')}}"><view data-event-opts="{{[['tap',[['backTo',['$event']]]]]}}" class="iconfont icon-fanhui back" bindtap="__e"></view><view class="songName">{{songInfo.name||'暂无数据'}}</view><view class="back"></view></view><view class="content-image" style="{{'top:'+(h+50+'px')+';'}}"><view class="circle-button"></view><image class="{{['needle',(isPlay)?'play':'']}}" src="../../static/images/song/needle.png" mode="widthFix"></image><view class="disc-content"><image class="disc" src="../../static/images/song/disc.png" mode="widthFix"></image><view class="song-back"><image class="songback-img" src="{{songInfo.al&&songInfo.al.picUrl}}" mode="widthFix"></image></view></view></view><scroll-view class="lyric-content" scroll-y="{{true}}" scroll-anchoring="{{true}}" scroll-with-animation="{{true}}" scroll-top="{{marginTop}}"><block wx:if="{{songInfo.fee==1}}"><view class="none-lyric">VIP试听中</view></block><block wx:else><view class="content-text"><block wx:for="{{lyric}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="{{['lyric-item',(currentIndex==index)?'currentTime':'']}}">{{item[1]}}</view></block></block><block wx:if="{{!!lyric}}"><view class="none-lyric">暂无歌词</view></block></view></block></scroll-view><view data-event-opts="{{[['touchend',[['changeProgress',['$event']]]]]}}" class="progress" bindtouchend="__e"><text>{{ct}}</text><view class="progress-line"><view class="progress-active" style="{{'width:'+(progress+'%')+';'}}"></view></view><text>{{dt}}</text></view><view class="footer"><view data-event-opts="{{[['tap',[['changeCircleType',['$event']]]]]}}" class="{{['iconfont',circleType]}}" catchtap="__e"></view><view class="iconfont icon-shangyiqu101" id="pre" data-event-opts="{{[['tap',[['switchSong',['$event']]]]]}}" catchtap="__e"></view><view data-event-opts="{{[['tap',[['play',['$event']]]]]}}" class="play-button" catchtap="__e"><text class="{{['iconfont',(isPlay)?'icon-zanting':'',(!isPlay)?'icon-bofang1':'']}}"></text></view><view class="iconfont icon-xiayiqu101" id="next" data-event-opts="{{[['tap',[['switchSong',['$event']]]]]}}" catchtap="__e"></view><view data-event-opts="{{[['tap',[['openList',['$event']]]]]}}" class="iconfont icon-caidan" catchtap="__e"></view></view></view><view class="{{['play-list',(isShow)?'up':'',(!isShow)?'down':'']}}"><view class="play-list__title">播放列表<text class="play-count">{{"("+(playList.length||0)+")"}}</text></view><scroll-view class="scroll-list__content" scroll-y="{{true}}" scroll-top="{{index*40}}"><view style="height:900rpx;"><block wx:for="{{playList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><block><view class="scroll-list__item" id="{{index}}" data-info="{{item.id}}" data-event-opts="{{[['tap',[['chooseSong',['$event']]]]]}}" bindtap="__e"><text class="song-number">{{index+1}}</text><block wx:if="{{item.id==songInfo.id}}"><text class="iconfont icon-zhengzaibofang"></text></block><text class="{{['play-list__songname',(item.id==songInfo.id)?'playing':'']}}">{{(item.name||item.songInfo.name)+(item.alia[0]?'('+item.alia[0]+')':'')}}</text><text class="{{['play-list__singer',(item.id==songInfo.id)?'playing':'']}}">{{'- '+(item.ar[0].name||item.artists[0].name||item.songInfo.ar[0].name)}}</text></view></block></block></view></scroll-view></view></view>