
.container {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #f5f5f5;
}
.search-bar {
  position: fixed;
	top: 0;
  width: 100%;
  height: 40px;
  background-color: #f5f5f5;
  padding: 5px 40rpx;
}
.search {
  background-color: #e7e7e7;
  font-size: 28rpx;
  height: 30px;
  line-height: 30px;
  color: #5c5c5c;
  text-align: center;
  border-radius: 30px;
}
.icon-sousuo {
  font-size: 36rpx;
}
.scroll-content {
  position: absolute;
  top: 40px;
  height: calc(100% - 40px);
}
.scroll-content-min {
  height: calc(100% - 102px);
}

